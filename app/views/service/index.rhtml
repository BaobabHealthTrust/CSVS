<script>
function validateForm()
{
var x=document.forms["index"]["bcode"].value;
if (x==null || x=="")
  {
  alert("You must Scan the barcode");
  return false;
  }
}
</script>
<font face="verdana,arial" size=-1>
<center><table cellpadding='2' cellspacing='0' border='0' id='ap_table'>
